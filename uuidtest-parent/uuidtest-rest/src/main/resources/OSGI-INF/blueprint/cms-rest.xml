<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
       http://camel.apache.org/schema/blueprint http://camel.apache.org/schema/blueprint/camel-blueprint.xsd">

    <!--栏目-->
    <reference id="columnService" interface="com.kalix.uuidtest.api.biz.IColumnBeanService"/>
    <camelContext id="uuidTestCamel" xmlns="http://camel.apache.org/schema/blueprint">
        <restConfiguration component="servlet" bindingMode="json">
            <dataFormatProperty key="prettyPrint" value="${rest.pretty}"/>
        </restConfiguration>

        <!-- defines the rest services using the context-path /template -->
        <rest path="/uuidtests" consumes="application/json;charset=utf-8" produces="application/json">
            <description>uuidtests rest service</description>
            <!-- this is a rest GET to find all template -->
            <get id="route-getAllUIIDtest" outType="com.kalix.framework.core.api.persistence.JsonData">
                <description>Find all uuidtests</description>
                <to uri="bean:columnService?method=getAllEntityByQuery(${header.page},${header.limit},${header.jsonStr},${header.sort})"/>
            </get>
            <!-- this is a rest POST to create a template -->
            <post id="route-addUUIDtest" type="com.kalix.uuidtest.entities.ColumnBean"
                  outType="com.kalix.framework.core.api.persistence.JsonStatus">
                <description>Create a uuid test</description>
                <to uri="bean:columnService?method=saveEntity"/>
            </post>
        </rest>
        <rest path="/uuidtests/{id}" consumes="application/json;charset=utf-8" produces="application/json">
            <!-- this is a rest GET to view a template by the given id -->
            <get id="route-getUUIDtest" outType="com.kalix.uuidtest.entities.ColumnBean">
                <description>Find UUID TEST by id</description>
                <to uri="bean:columnService?method=getEntity(${header.id})"/>
            </get>
            <!-- this is a rest PUT to update a template -->
            <put id="route-updateUUIDtest" type="com.kalix.uuidtest.entities.ColumnBean"
                 outType="com.kalix.framework.core.api.persistence.JsonStatus">
                <description>Updates a UUIDtest</description>
                <to uri="bean:columnService?method=updateEntity"/>
            </put>
            <!-- this is a rest DELETE to delete a template -->
            <delete id="route-deleteUUIDtest"
                    outType="com.kalix.framework.core.api.persistence.JsonStatus">
                <description>Delete a UUIDtest</description>
                <to uri="bean:columnService?method=deleteEntity(${header.id})"/>
            </delete>
        </rest>
    </camelContext>
</blueprint>